/**app.wxss**/
page {
  height: 100%;
}
.container {
  height: 93%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f9;
}

.float-btn {
  width: 50px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  background-color:#5cadff;
  position: fixed;
  bottom: 15%;
  right: 30px;
  border-radius: 50px;
  box-shadow: 2px 3px 1px 1px #2d8cf0;
}

.float-btn-default {
  background-color:#5cadff;
  box-shadow: 2px 3px 1px 1px #2d8cf0;
}

.float-btn-active {
  background-color: #2d8cf0;
  box-shadow: 2px 2px 1px 1px #2d8cf0;
}

.tab-bar-box {
  width: 100%;
  height: 7%;
  margin-bottom: 0;
}
.tab-bar {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}