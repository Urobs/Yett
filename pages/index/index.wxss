/**index.wxss**/

.todo-list {
  width: 100%;
}
.swipeout-box {
  width: 100%;
  margin-top: 5px;
}
.swipeout-content {
  width: 100%;
}

.todo-image {
  width: 50px;
  height: 50px;
  float: left;
  text-align: center;
  line-height:50px;
  border-radius: 50px;
}

.todo {
  height: 100%;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  align-items: baseline;
  padding: 0 15px;
  justify-content: flex-start;
}

.time-left {
  font-size: 8px;
}

.swipeout-btn-group {
  height: 100%;
  width: 100%;
}

.swipeout-btn {
  height: 100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items:center;
  color:#fff;
}

.finish {
  background: #19be6b;
}

.delete {
  background: #ed3f14;
}

.load-more {
  width: 100%;
}