.form-container {
  width: 100%;
  height: 100%;
  background-color: #f8f8f9;
}

.page-icon {
  margin-top: 5px;
  margin-left: 5px; 
}

.icon-text {
  padding-left: 10px; 
}

.title {
  display: flex;
  justify-content: center;
  font-size: 14px;
}

.todoNum {
  text-align: center;
}

.task-title {
  text-align: center;
}

.selectTodoNum {
  width: 100%;
}

.task-view {
  width: 95%;
  margin: auto;
  margin-top: 5px;
  background-color: #fff;
  border: 1px solid #e9eaec;
  border-radius: 10px;
  box-shadow: 3px 2px 1px 1px #e9eaec;
}

.singal-radio-1 {
  color: #5cadff;
}

.singal-radio-2 {
  color: #2DA5EF;
}

.singal-radio-3 {
  color: #2b85e4;
}

.singal-radio-4 {
  color: #2B74E2;
}

.timePicker {
  width: 100%;
  height: 20px;
  padding: 10px;
}

.timeshow {
  font-size: 14px;
  padding-left: 15px;
}

.submit-btn {
  margin-top: 20px; 
}